<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    tools:context="com.svenwesterlaken.contactcardapp.MainActivity"
    android:scrollbarAlwaysDrawVerticalTrack="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/header">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:src="@drawable/bridge"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img42"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:civ_border_width="0dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Gender:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <TextView
                    android:text="Female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/genderInfo"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/header1">

                <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameHeader"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="#1e1e1e"
                    android:textSize="12dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="Title:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:text="M.S."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="First Name:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:text="Venla" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Last Name:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:text="Tikannen" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="#1e1e1e"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Street:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    android:text="1172 NordenskiÃ¶ldinkatu" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="City:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/city"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cityInfo"
                    android:layout_weight="1"
                    android:text="Hailuoto" />
            </TableRow>

            <com.svenwesterlaken.contactcardapp.IconButton
                android:text="Like"
                android:textColor="#fefefe"
                whatever:iconSrc="@drawable/ic_thumb_up_white_48dp"
                app:iconSize="20dp"
                app:iconPadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:layout_weight="1"
                android:visibility="visible"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>

</ScrollView>