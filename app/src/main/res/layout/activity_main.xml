<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.svenwesterlaken.contactcardapp.MainActivity"
    android:scrollbarAlwaysDrawVerticalTrack="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/header">

        <ImageView
            android:id="@+id/userBackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:src="@drawable/bridge" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img42"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:civ_border_width="0dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TableLayout
            android:id="@+id/userContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </TableLayout>

        <com.svenwesterlaken.contactcardapp.IconButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Like"
            android:textColor="#fefefe"
            android:visibility="visible"
            app:iconPadding="10dp"
            app:iconSize="20dp"
            app:iconSrc="@drawable/ic_thumb_up_white_48dp" />

    </LinearLayout>

</RelativeLayout>

</ScrollView>